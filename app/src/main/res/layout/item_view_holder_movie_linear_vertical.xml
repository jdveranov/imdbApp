<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/imageView_LinearVertical_Principal"
        android:layout_width="@dimen/movie_item_image"
        android:layout_height="@dimen/movie_item_image"
        android:src="@drawable/matrix"
        android:scaleType="centerInside"
        android:layout_marginStart="@dimen/movie_small_space"
        android:layout_marginTop="@dimen/movie_small_space"
        android:contentDescription="@string/app_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/textView_LinearVertical_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/movie_small_space"
        app:layout_constraintStart_toEndOf="@id/imageView_LinearVertical_Principal"
        app:layout_constraintTop_toTopOf="@id/imageView_LinearVertical_Principal"
        tools:text="Matrix"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textView_LinearVertical_year"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/movie_small_space"
        app:layout_constraintStart_toEndOf="@id/imageView_LinearVertical_Principal"
        app:layout_constraintTop_toBottomOf="@id/textView_LinearVertical_title"
        tools:text="1999"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textView_LinearVertical_casting"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/movie_small_space"
        android:layout_marginTop="@dimen/movie_small_space"
        app:layout_constraintStart_toEndOf="@id/imageView_LinearVertical_Principal"
        app:layout_constraintTop_toBottomOf="@id/textView_LinearVertical_year"
        tools:text="Keanu Reeves, Carrie-Anne Moss" />





</androidx.constraintlayout.widget.ConstraintLayout>